<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="cornerRadius">200dp</item>
        <item name="backgroundTint">@color/gray</item>
    </style>

    <style name="BaseButton.Dark">
        <item name="backgroundTint">@color/dark_gray</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BaseButton.Orange">
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>